###########
# Server  #
###########
# Port and environment the API runs on
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
LOG_FILE=logs/app.log

########
# URLs #
########
# Public base URL of the API (used in generated links)
APP_BASE_URL="http://localhost:3000"
# Frontend base URL for cross-origin checks
FRONTEND_URL="http://localhost:3000"
# Password reset page URL (required)
PASSWORD_RESET_URL="http://localhost:3000/auth/reset-password"
# Allowed origins, comma-separated
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"

############
# Auth/JWT #
############
JWT_SECRET=change_me
JWT_EXPIRES_IN=1d
# Session cookie name (optional)
SESSION_COOKIE_NAME=karirkit_session

#############
# Database  #
#############
DATABASE_URL="mysql://user:password@localhost:3306/karirkit"
DATABASE_USER="user"
DATABASE_PASSWORD="password"
DATABASE_NAME="karirkit"
DATABASE_HOST="localhost"
DATABASE_PORT=3306

#########
# Redis #
#########
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_USERNAME=null
REDIS_DB=0

##############
# OAuth/SSO  #
##############
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

########
# Mail #
########
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@karirkit.local"
MAIL_FROM_NAME="KarirKit"

########
# OTP  #
########
OTP_ENABLED=false
OTP_EXPIRES_IN=5m
OTP_RESEND_COOLDOWN=60s

#############################
# Downloads & Conversions   #
#############################
# Toggle PDF download for CVs and application letters
PDF_DOWNLOAD_ENABLED=true
# Enable Ghostscript compression for PDFs
PDF_COMPRESSION_ENABLED=false
GHOSTSCRIPT_COMMAND=gs
GHOSTSCRIPT_PDFSETTINGS=/screen
GHOSTSCRIPT_COLOR_RESOLUTION=96
GHOSTSCRIPT_JPEG_QUALITY=60
# LibreOffice binary for DOCX -> PDF conversion
LIBREOFFICE_COMMAND=soffice
